<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".Detail">


    <TextView
        android:id="@+id/idProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:padding="0dp"
        android:text="id"
        android:textColor="@color/md_red_A700"
        app:layout_constraintEnd_toStartOf="@+id/price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_marginTop="1dp"
        android:padding="0dp"
        android:text="name"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/idProduct"
        app:layout_constraintStart_toStartOf="@+id/idProduct"
        app:layout_constraintTop_toBottomOf="@+id/idProduct" />

    <TextView
        android:id="@+id/price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/cant"
        android:layout_toLeftOf="@+id/cant"
        android:gravity="center"
        android:padding="0dp"
        android:text="price"
        app:layout_constraintEnd_toStartOf="@+id/cant"
        app:layout_constraintStart_toEndOf="@+id/idProduct"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:padding="0dp"
        android:text="cant"
        app:layout_constraintBaseline_toBaselineOf="@+id/price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/price" />

</androidx.constraintlayout.widget.ConstraintLayout>