<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chefmenu.nami">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.chefmenu.nami.db.Config"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.chefmenu.nami.Login"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.chefmenu.nami.ProfileActivity"
            android:parentActivityName="com.chefmenu.nami.MainActivity"></activity>
        <activity
            android:name="com.chefmenu.nami.Detail"
            android:parentActivityName="com.chefmenu.nami.MainActivity"></activity>
        <activity
            android:name="com.chefmenu.nami.MainActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="com.chefmenu.nami.HelpPage"
            android:parentActivityName="com.chefmenu.nami.MainActivity"></activity>
    </application>

</manifest>